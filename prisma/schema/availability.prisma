model Availability {
    id        String @id @default(uuid())
    tutorId   String
    dayOfWeek Day
    startTime String
    endTime   String

    // Relations
    tutor Tutor @relation(fields: [tutorId], references: [id], onDelete: Cascade)

    // Prevent duplicate slots for the same tutor
    @@unique([tutorId, dayOfWeek, startTime, endTime])
    @@map("availability")
}

enum Day {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}
